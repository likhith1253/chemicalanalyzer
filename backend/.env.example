# ========================================
# Django Configuration
# ========================================
SECRET_KEY=your-secret-key-here-change-in-production-at-least-50-characters
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Comma-separated list of trusted origins (include both frontend and backend URLs)
CSRF_TRUSTED_ORIGINS=https://your-frontend.vercel.app,https://your-backend.onrender.com,http://localhost:5173,http://localhost:3000

# ========================================
# Database Configuration
# ========================================
# For Production (PostgreSQL on Render) - Render provides this automatically
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# For Development (SQLite) - leave commented, will use default

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173,http://localhost:3000

# ========================================
# AI Configuration
# ========================================
# Get your key from https://aistudio.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# ========================================
# Optional Settings
# ========================================
# TIME_ZONE=UTC
# LANGUAGE_CODE=en-us

